      <TextField fx:id="txtUserName" layoutX="73.0" layoutY="283.0" onAction="#userNameOnAction" onKeyReleased="#txtUserNameOnKeyAction" prefHeight="44.0" prefWidth="269.0" promptText="\@User Name" style="-fx-background-radius: 5;" />
