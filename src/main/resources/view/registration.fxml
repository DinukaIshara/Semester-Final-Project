            <Image url="@../image/Dark modern tech products promo carousel Instagram post (400 x 550 px).png" />
         </image>
      </ImageView>
      <Label layoutX="110.0" layoutY="46.0" stylesheets="@../css/sidePane.css" text="Registration" textFill="#05bef3">
